{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": ["airbnb", "prettier", "plugin:node/recommended"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "prettier/prettier": [
    "error",
    {
      "singleQuote": true,
      "parser": "flow"
    }
  ],
  "rules": {
    "prettier/prettier": "error",
    "no-unused-vars": "warn",
    "semi": ["error", "always"],
    "no-console": "off",
    "func-names": "off"
  }
}
